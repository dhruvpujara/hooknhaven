<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/productsPage.css">

    <!-- Google Font for cursive style -->
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">

    <style>
        body {
            background-image: url('/pictures/main.png');
            color: #fff;
            font-family: Arial, sans-serif;
        }

        section {
            padding: 1rem 0;
        }

        /* h1 centered, elegant style */
        h1 {
            font-family: 'Great Vibes', cursive;
            font-size: 2.2rem;
            color: #7b1fa2;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            text-align: center;
            margin-bottom: 1rem;
        }

        .scroll-row {
            display: flex;
            overflow-x: auto;
            gap: 1rem;
            padding-bottom: 1rem;
        }

        .card {
            flex: 0 0 8rem;
            width: 8rem;
            text-align: center;
            color: #fff;
            text-decoration: none;
        }

        .card-img {
            position: relative;
            width: 100%;
            padding-bottom: 100%;
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .card-img img {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform .3s;
        }

        .card-img:hover img {
            transform: scale(1.1);
        }

        /* Slightly larger product names */
        .card p {
            font-family: 'Great Vibes', cursive;
            color: #7b1fa2;
            font-size: 2rem;
            margin-top: 0.5rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>
    <% allCollections.forEach(collection=> { %>
        <section>
            <h1>
                <%= collection.collectionName %>
            </h1>
            <div class="scroll-row">
                <% collection.items.forEach(item=> { %>
                    <a href="/product/<%= collection.collection %>/<%= item._id %>" class="card">
                        <div class="card-img" style="background: linear-gradient(135deg,#fbbf24,#f59e0b);">
                            <img src="<%= item.image %>" alt="<%= item.name %>">
                        </div>
                        <p>
                            <%= item.name %>
                        </p>
                    </a>
                    <% }) %>
            </div>
        </section>
        <% }) %>
</body>

</html>